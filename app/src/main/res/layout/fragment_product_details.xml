<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_back_gradient">
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_source" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:padding="@dimen/margin_horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/xXXSmallPadding"
            android:layout_marginEnd="@dimen/xXXSmallPadding"
            android:background="@drawable/button_bg"
            android:clickable="true"
            android:contentDescription="@string/image_source"
            android:elevation="@dimen/xXXSmallPadding"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/xXXSmallPadding"
            android:layout_marginEnd="@dimen/xXXSmallPadding"
            android:background="@drawable/button_bg"
            android:clickable="true"
            android:contentDescription="@string/image_source"
            android:elevation="@dimen/xXXSmallPadding"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_more_options" />

        <TextView
            style="@style/BoldMediumHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnMore"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/mediumPadding"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/details"
            android:textColor="@color/white" />
    </RelativeLayout>




</RelativeLayout>